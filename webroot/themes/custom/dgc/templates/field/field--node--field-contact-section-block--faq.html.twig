{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'grid-x',
    'grid-padding-x'
  ]
%}
<div class="grid-background-contact-faq">
  <div class="contact-faq">
    <div {{ attributes.addClass(classes).setAttribute('id', 'contact-section') }}>
      {{ title_suffix }}
        <h2>{{ items.0.content.field_section_title }}</h2>
        <div class="contact-methods">
          {% if items.0.content.field_phone.0 %}
          <div class="grid-container contact-phone"> 
            <div class="grid-x cell">
              <i class="fi-telephone"></i>
              <div class="grid-y">
                {{ items.0.content.field_phone }}
                {{ items.0.content.field_phone_text }}
              </div>
            </div>
          </div>
          {% endif %}
          {% if items.0.content.field_email.0 %}
          <div class="grid-container contact-email">
            <div class="grid-x cell">
              <i class="fi-mail"></i>
              <div class="grid-y email-grid">
                {{ items.0.content.field_email }}
                {{ items.0.content.field_email_text }}
              </div>
            </div>
          </div>
          {% endif %}
          {% if items.0.content.field_point_of_contact_name.0 %}
          <div class="grid-container contact-person">
            <div class="grid-x cell">
              <i class="fi-torso"></i>
              <div class="grid-y">
                <h3>{{ items.0.content.field_point_of_contact_name }}</h3>
                {{ items.0.content.field_point_of_contact_title }}
              </div>
            </div>
          </div>
          {% endif %}
        </div>
      </div>