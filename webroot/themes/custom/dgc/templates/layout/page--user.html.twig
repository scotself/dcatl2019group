<div class="layout-container">

  {% if page.header %}
    {{ page.header }}
  {% endif %}

  <main role="main" class="grid-container">
    <div class="grid-x">
      <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}

      {% set has_sidebar = page.sidebar|render|striptags|trim is not empty %}
      <div class="layout-content cell small-12">
        {{ page.content }}
      </div>

      {% if has_sidebar %}
        <div class="layout-sidebar cell small-12">
          {{ page.sidebar }}
        </div>
      {% endif %}
    </div>
  </main>

  {% if page.footer %}
    <footer role="contentinfo" id="footer-3">
      <div class="grid-container">
        <div class="grid-x">
          {{ page.footer }}
        </div>
      </div>
    </footer>
  {% endif %}

</div>
